@{
    ViewBag.Title = "ДОБАВЛЕНИЕ";
    var list = new List<int>();
    for (int i = 1900; i < 2028; i++)
    {
        list.Add(i);
    }
}

<h2>ДОБАВЛЕНИЕ</h2>

<form  method="post" action="/Manage/AddMovie" enctype="multipart/form-data">
    <table class="add-table">
        <tr>
            <td class="td_name">название</td>
            <td><input class="add-input" type="text" required name="Name" /></td>
        </tr>
        <tr>
            <td class="td_name">год</td>
             <td>
                 <select required name="Year" id="genre-list">
                    @foreach (var item in list)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="td_name">жанр</td>
            <td>
                <select required name="Genre" id="genre-list">
                    @foreach (var item in ViewBag.Genre)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="td_name">страна</td>
            <td>
                <select required name="Country" id="genre-list">
                    @foreach (var item in ViewBag.Country)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="td_name">рейтинг Imdb</td>
            <td style="display:flex">
                <span style="font-size:18px; width:30px;" class="add-input" id="imdb">0</span>
                <input required step="0.01"oninput="setImdb(event)" style="margin-left:20px" class="add-input" type="range" min="0" max="10"  name="Imdb" value="0" />
            </td>
        </tr>
        <tr>
            <td style="display:flex; justify-content:flex-start; align-items:center;" class="td_name">описание</td>
            <td><textarea required name="Description" style="height:150px; max-height:150px;"></textarea></td>
        </tr>
        <tr>
            <td class="td_name">постер</td>
            <td><input required type="file" name="Poster" accept="Image/*" /></td>
        </tr>
        <tr>
            <td class="td_name">видео</td>
            <td><input required type="file" name="Video" accept="Video/*" /></td>
        </tr>
        <tr>
            <td class="td_name">задник</td>
            <td><input required type="file" name="Pagebg" accept="Image/*" /></td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary redirect-back">отправить</button>
</form>

<script>
    function setImdb(event) {
        document.getElementById('imdb').innerText = event.target.value;
    }
</script>
